<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--맵View 생성-->

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="@+id/btnbmark"
        app:layout_constraintTop_toBottomOf="@+id/btnbmark" />

    <Button
        android:id="@+id/btntest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="testLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testboard"
        app:layout_constraintStart_toStartOf="@+id/btntest"
        app:layout_constraintTop_toBottomOf="@+id/btntest" />

    <Button
        android:id="@+id/btnuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testuser"
        app:layout_constraintStart_toStartOf="@+id/btnboard"
        app:layout_constraintTop_toBottomOf="@+id/btnboard" />

    <Button
        android:id="@+id/btnbmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testbookmark"
        app:layout_constraintStart_toStartOf="@+id/btnuser"
        app:layout_constraintTop_toBottomOf="@+id/btnuser" />

</androidx.constraintlayout.widget.ConstraintLayout>